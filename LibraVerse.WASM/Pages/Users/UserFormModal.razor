<div class="modal fade @(_isOpen ? "show" : "")" tabindex="-1" style="display: @(_isOpen ? "block" : "none")">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">User Registration</h5>
                <button type="button" class="btn-close btn-close-white" @onclick="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="@_userModel" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <InputText @bind-Value="_userModel.Name" class="form-control" id="name" placeholder="Enter user name" />
                                <ValidationMessage For="@(() => _userModel.Name)" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <InputText @bind-Value="_userModel.Email" class="form-control" id="email" placeholder="Enter user email" type="email" />
                                <ValidationMessage For="@(() => _userModel.Email)" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <InputText @bind-Value="_userModel.Password" class="form-control" id="password" placeholder="*********" type="password" />
                                <ValidationMessage For="@(() => _userModel.Password)" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label for="phone-number" class="form-label">Phone Number</label>
                                <InputText @bind-Value="_userModel.PhoneNumber" class="form-control" id="phone-number" placeholder="Enter user phone number" type="number" />
                                <ValidationMessage For="@(() => _userModel.PhoneNumber)" class="text-danger" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="address" class="form-label">Address</label>
                                <InputText @bind-Value="_userModel.Address" class="form-control" id="address" placeholder="Enter user address" />
                                <ValidationMessage For="@(() => _userModel.Address)" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label for="city" class="form-label">City</label>
                                <InputText @bind-Value="_userModel.City" class="form-control" id="city" placeholder="Enter user city" />
                                <ValidationMessage For="@(() => _userModel.City)" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label for="state" class="form-label">State</label>
                                <InputText @bind-Value="_userModel.State" class="form-control" id="state" placeholder="Enter user state" />
                                <ValidationMessage For="@(() => _userModel.State)" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label for="role" class="form-label">Role</label>
                                <InputSelect @bind-Value="_userModel.Role" class="form-control" id="role">
                                    <option value="@Role._2">Staff</option>
                                    <option value="@Role._3">Customer</option>
                                </InputSelect>
                                <ValidationMessage For="@(() => _userModel.Role)" class="text-danger" />
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button type="button" class="btn btn-outline-secondary" @onclick="Close">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@_isSaving">
                            @if (_isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Saving...</span>
                            }
                            else
                            {
                                <span>Save</span>
                            }
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@if (_isOpen)
{
    <div class="modal-backdrop fade show"></div>
}
